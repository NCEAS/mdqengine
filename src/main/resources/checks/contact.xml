<?xml version="1.0" encoding="UTF-8"?>
<mdq:check xmlns:mdq="https://nceas.ucsb.edu/mdqe">
  <id>contact</id>
  <name>Contact is present</name>
  <level>required</level>
  <dialect>
    <name>eml</name>
    <xpath>boolean(/*[local-name() = 'eml'])</xpath>
  </dialect>
  <selector>
    <name>contact</name>
    <xpath>/eml/dataset/contact</xpath>
  </selector>
  <environment>rscript</environment>
  <code><![CDATA[
    library(metadig)
    check_presence(contact)
  ]]></code>
</mdq:check>
