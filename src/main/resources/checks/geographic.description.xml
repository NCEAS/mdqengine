<?xml version="1.0" encoding="UTF-8"?>
<mdq:check xmlns:mdq="https://nceas.ucsb.edu/mdqe">
  <id>geographic.description</id>
  <name>Geographic Coverage description is present at the dataset level</name>
  <level>required</level>
  <dialect>
    <name>eml</name>
    <xpath>boolean(/*[local-name() = 'eml'])</xpath>
  </dialect>
  <selector>
    <name>description</name>
    <xpath>/eml/dataset/coverage/geographicCoverage/geographicDescription</xpath>
  </selector>
  <environment>rscript</environment>
  <code><![CDATA[
    library(metadig)
    check_presence(description)
  ]]></code>
</mdq:check>
